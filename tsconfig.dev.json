{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist.dev",
        "rootDir": "src",
        "baseUrl": "./",
        "skipLibCheck": true,
        "types": ["mocha"],
		"typeRoots": ["./node_modules/@types", "./src/@types/express.d.ts"],
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
		"src/@types/*.d.ts"
    ]
}